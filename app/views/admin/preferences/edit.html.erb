<%- column_div :type => :primary do -%>
  <h2>Editing preferences</h2>

  <%= error_messages_for :preferences %>

  <% form_for :preferences,
              :url => admin_preference_path(@preferences),
              :html => { :method => :put } do |f| %>
              
    <div class="form_row">
      <label for="app_name">Application name</label>
      <%= f.text_field :app_name %>
    </div>
    
    <div class="form_row">
      <label for="domain">Email domain</label>
      <%= f.text_field :domain %>
    </div>

    <div class="form_row">
      <label for="server_name">Server name</label>
      <%= f.text_field :server_name %>
    </div>

    <div class="form_row">
      <label for="smtp_server">Smtp server</label>
      <%= f.text_field :smtp_server %>
    </div>

    <div class="form_row">
      <label for="default_group_id">Default group for new registrations</label>
      <%= f.select :default_group_id, @groups %>
    </div>

    <div class="form_row">
      <label for="blog_feed_url">Blog Feed URL</label>
      <%= f.text_field :blog_feed_url %>
    </div>

    <div class="form_row">
      <label for="exception_notification">Exception Notify Emails</label>
      <%= f.text_field :exception_notification %>
    </div>

    <div class="form_row">
      <label for="new_member_notification">New Member Notify Emails</label>
      <%= f.text_field :new_member_notification %>
    </div>

    <div class="form_row">
      <label for="googlemap_api_key">Google Maps API key</label>
      <%= f.text_field :googlemap_api_key %>
    </div>

    <div class="form_row">
      <label for="disqus_shortname">Disqus Short name (blog comments)</label>
      <%= f.text_field :disqus_shortname %>
    </div>

    <div class="form_row">
      <label for="gmail">Google Calendar src</label>
      <%= f.text_field :gmail %>
    </div>

    <p>Send email when messages, connection requests, etc., are sent</p>
    <div class="form_row">
      <label for="email_notifications"
             class="checkbox">Email notifications</label>
      <%= f.check_box :email_notifications %>
    </div>

    <br />

    <p>Display a note that the site is just a demonstration</p>  
    <div class="form_row">
      <label for="demo"
             class="checkbox">Demo site</label>
      <%= f.check_box :demo %>
    </div>

    <br />

    <p>Register new people in a deactivated state until whitelisted</p>
    <div class="form_row">
      <label for="whitelist"
             class="checkbox">Whitelist</label>
      <%= f.check_box :whitelist %>
    </div>

    <br />

    <p>Verify email for new registrations using an activation code</p>  
    <div class="form_row">
      <label for="email_verifications"
             class="checkbox">Email verifications</label>
      <%= f.check_box :email_verifications %>
    </div>

    <br />

    <p>Enable zipcode browsing</p>
    <div class="form_row">
      <label for="zipcode_browsing"
             class="checkbox">Zipcode Browsing</label>
      <%= f.check_box :zipcode_browsing %>
    </div>

    <br />

    <div class="form_row">
      <label for="registration_intro">Registration Form Intro</label>
      <br />
      <p><%= formatting_note %></p>

      <%= f.text_area :registration_intro, :rows => 5 %>
    </div>

    <br />

    <div class="form_row">
      <label for="agreement">Agreement</label>
      <br />
      <p><%= formatting_note %></p>

      <%= f.text_area :agreement, :rows => 10 %>
    </div>
    
    <br />

    <div class="form_row">
      <label for="about">About</label>
      <br />
      <p><%= formatting_note %></p>

      <%= f.text_area :about, :rows => 10 %>
    </div>
    
    <br />

    <div class="form_row">
      <label for="practice">Practice</label>
      <br />
      <p><%= formatting_note %></p>

      <%= f.text_area :practice, :rows => 10 %>
    </div>
    
    <br />

    <div class="form_row">
      <label for="steps">Steps</label>
      <br />
      <p><%= formatting_note %></p>

      <%= f.text_area :steps, :rows => 10 %>
    </div>
    
    <br />

    <div class="form_row">
      <label for="questions">Questions</label>
      <br />
      <p><%= formatting_note %></p>

      <%= f.text_area :questions, :rows => 10 %>
    </div>
    
    <br />

    <div class="form_row">
      <label for="contact">Contact</label>
      <br />
      <p><%= formatting_note %></p>

      <%= f.text_area :contact, :rows => 10 %>
    </div>
    
    <br />

    <div class="form_row">
      <label for="analytics">Analytics (will be inserted 
         just before the <%= h("</body>") %> tag)</label>
      <%= f.text_area :analytics, :rows => 10 %>
    </div>

    <div class="form_row">
      <%= f.submit t('button_update'), :class => "button" %>
    </div>
      or <%= link_to t('button_cancel'), admin_preferences_path %>
  <% end %>
<%- end -%>
