  <div class="form_row">
    <%= f.label t('title') %>
    <%= f.text_field :name, :size => 40, :maxlength => 255 %>
  </div>
  <div class="form_row">
    <%= f.label t('offers.new.total_available') %>
    <%= f.text_field :total_available, :size => 2, :value => 1 %>
  </div>
  <div class="form_row">
    <%= f.label t('estimate') %>
    <%= f.text_field :price, :size => 5 %>&nbsp;<span class='small'><%= @group.unit %></span>
  </div>
  <div class="form_row">
    <%= f.label t('expiration_date') %>
    <%= f.text_field :expiration_date, :size => 7 %>
  </div>
  <div class="form_row full">
    <%= f.label t('description') %>
    <p class='formatting'><%= t('offers.new.description_label') %></p>
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div class="form_row full">
    <%= render :partial => "shared/select_categories", :locals => { :model_name => 'offer' } %>
  </div>
