<h2><%= t('oauth.authorize.authorize_access_to_your_account') %></h2>
<p><%= t('oauth.authorize.would_you_like_to_authorize') %> <%= link_to @client_application.name,@client_application.url %> (<%= link_to @client_application.url,@client_application.url %>) <%= t('oauth.authorize.to_access_your_account') %></p>
<%= form_tag authorize_url do %>
  <%= hidden_field_tag "response_type", params[:response_type]%>
  <%= hidden_field_tag "client_id", params[:client_id]%>
  <%= hidden_field_tag "redirect_uri", params[:redirect_uri]%>
  <%= hidden_field_tag "state", params[:state]%>
  <%= hidden_field_tag "scope", params[:scope]%>
  
<p>
<%= check_box_tag 'authorize' %> <%= t('oauth.authorize.authorize_access') %>
</p>
<p>
  <%= submit_tag t('oauth.authorize.button_authorize') %>
</p>
<% end %>
